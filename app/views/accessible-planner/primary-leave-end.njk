{% from "back-link/macro.njk" import govukBackLink %}
{% from "button/macro.njk" import govukButton %}
{% from "fieldset/macro.njk" import govukFieldset %}
{% from "hidden-fields/macro.njk" import appendHiddenFields %}
{% from "select/macro.njk" import govukSelect %}

{% from "./answers-so-far/macro.njk" import answersSoFar %}

{% extends "layout.njk" %}

{% block pageTitle -%}
  {{ "How many weeks of " + (data | primaryLeaveType | capitalize) + " Leave will the " + (data | primaryName) + " take?" | pageTitle }}
{%- endblock %}

{% block beforeContent %}
  {{ super() }}

  {{ govukBackLink({
    text: "Back",
    href: backPath()
  }) }}
{% endblock %}

{% set primaryName = (data | primaryName) %}
{% set primaryLeaveType = (data | primaryLeaveType) %}
{% set zeroWeek = (data | zeroWeek) %}
{% set isAdoption = (data | isAdoption) %}
{% set birthOrPlacement= (data | birthOrPlacement) %}

{% set firstWeekOfLeave = (data["leave-blocks"]["primary"]["initial"]["start"] | int) %}
{% set options = range(firstWeekOfLeave + 1, (52 if (firstWeekOfLeave > 0) else (firstWeekOfLeave + 52))) %}

{% macro optionText(weekNumber) %}
  {% set totalWeeks = weekNumber - firstWeekOfLeave + 1 %}
  {{ totalWeeks | weeks }}
{% endmacro %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <form method="POST">
        {% call appendHiddenFields(data) %}
          {% set hint %}
            <p class="govuk-hint">
              {{ primaryLeaveType | capitalize }} Leave must be taken in one continuous block and it is compulsory
              to take {{ primaryLeaveType | capitalize }} Leave in the 2 weeks after {{ birthOrPlacement }}.
            </p>
            <p class="govuk-hint">
              The {{ primaryName }} can take up to a maximum of 52 weeks of {{ primaryLeaveType | capitalize }} Leave.
            </p>
            <p class="govuk-hint">
              Any unused {{ primaryLeaveType | capitalize }} Leave can be taken by either the {{ primaryName }}
              or their partner as Shared Parental Leave.
            </p>
            <p class="govuk-hint">
              The first week of {{ primaryLeaveType | capitalize }} Leave is the week commencing {{ zeroWeek | offsetWeeks(firstWeekOfLeave) | formatForDisplay }}.
            </p>
            <p class="govuk-hint">
              Your previous answers are at the bottom of the page.
            </p>
          {% endset %}
            {{ govukSelect({
              id: "primary-leave-end",
              name: "leave-blocks[primary][initial][end]",
              hint: {
                html: hint
              },
              label: {
                text: "How many weeks of " + (data | primaryLeaveType | capitalize) + " Leave will the " + (data | primaryName) + " take?",
                classes: "govuk-label--xl",
                isPageHeading: true
              },
              items: options | mapValuesToSelectOptions(optionText)
            }) }}
        {% endcall %}
        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
    <div class="govuk-grid-column-two-thirds-from-desktop">
      {{ answersSoFar(data) }}
    </div>
  </div>
{% endblock %}
