{% from "back-link/macro.njk" import govukBackLink %}
{% from "button/macro.njk" import govukButton %}
{% from "fieldset/macro.njk" import govukFieldset %}
{% from "hidden-fields/macro.njk" import appendHiddenFields %}
{% from "radios/macro.njk" import govukRadios %}

{% from "./answers-so-far/macro.njk" import answersSoFar %}

{% extends "layout.njk" %}

{% block pageTitle -%}
  {{ "How many weeks of Paternity Leave will the partner take?" | pageTitle }}
{%- endblock %}

{% block beforeContent %}
  {{ super () }}

  {{ govukBackLink({
    text: "Back",
    href: backPath()
  }) }}
{% endblock %}

{% set birthOrPlacement = "placement" if data | isAdoption else "birth" %}
{% set zeroWeek = (data | zeroWeek) %}
{% set paternityLeaveStart = (data["leave-blocks"]["secondary"]["initial"]["start"] | int) %}
{% set oneWeekEnd = paternityLeaveStart %}
{% set twoWeeksEnd = paternityLeaveStart + 1 %}

{% block content %}
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <form method="POST">
        {% call appendHiddenFields(data) %}
          {% set hint %}
            <p class="govuk-hint">
              The partnerâ€™s Paternity Leave starts on {{ zeroWeek | offsetWeeks(paternityLeaveStart) | formatForDisplay }}.
            </p>
            <p class="govuk-hint">
              Your previous answers are at the bottom of the page.
            </p>
          {% endset %}
          {{ govukRadios({
            idPrefix: "changed-name",
            name: "leave-blocks[secondary][initial][end]",
            fieldset: {
              legend: {
                text: "How many weeks of Paternity Leave will the partner take?",
                isPageHeading: true,
                classes: "govuk-fieldset__legend--xl"
              }
            },
            hint: {
              html: hint
            },
            items: [
              {
                value: oneWeekEnd,
                text: "1 week of Paternity Leave",
                checked: (data["leave-blocks"]["secondary"]["initial"]["end"] | int) === oneWeekEnd
              },
              {
                value: twoWeeksEnd,
                text: "2 weeks of Paternity Leave",
                checked: (data["leave-blocks"]["secondary"]["initial"]["end"] | int) === twoWeeksEnd
              }
            ]
          }) }}
        {% endcall %}
        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
    <div class="govuk-grid-column-two-thirds-from-desktop">
      {{ answersSoFar(data) }}
    </div>
  </div>
{% endblock %}
