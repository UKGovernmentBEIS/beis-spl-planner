{% macro secondaryNotice(options) %}
  {% set data = options.data %}
  {% if data | shouldDisplaySecondaryLeaveAndPayForm %}
    {% if data | isBirth -%}
      <li>Partner Shared Parental Leave Forms (after Maternity Leave)</li>
    {%- elif data | isAdoption -%}
      <li>Partner Shared Parental Leave Forms (after Adoption Leave)</li>
    {%- else -%}
      <li>Partner Shared Parental Leave Forms (a child through surrogacy)</li>
    {% endif %}
  {% endif %}
{% endmacro %}
