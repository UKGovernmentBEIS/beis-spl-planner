{% macro primaryNotice(options) %}
  {% set data = options.data %}
  {% if data | shouldDisplayPrimaryLeaveAndPayForm %}
    {% if data | isBirth -%}
      <li>Mother Shared Parental Leave Forms (after Maternity Leave)</li>
    {%- elif data | isAdoption -%}
      <li>Primary adopter (parent eligible for adoption leave) Shared Parental Leave Forms</li>
    {%- else -%}
      <li>Parental Order Parent (parent eligible for adoption leave) Shared Parental Leave Forms (a child through surrogacy)</li>
    {%- endif %}
  {% elif data | shouldDisplayPrimaryCurtailmentForm %}
    {% if data | isBirth -%}
      <li>Curtailment of Maternity Entitlement Form</li>
    {%- elif data | isAdoption -%}
      <li>Curtailment of Adoption Entitlement Form</li>
    {%- else -%}
      <li>Curtailment of Adoption Entitlement Form (a child through surrogacy)</li>
    {%- endif %}
  {% endif %}
{% endmacro %}
