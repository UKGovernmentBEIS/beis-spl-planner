{% from "back-link/macro.njk" import govukBackLink %}
{% from "radios/macro.njk" import govukRadios %}
{% from "error-summary/macro.njk" import govukErrorSummary %}
{% from "hidden-fields/macro.njk" import appendHiddenFields %}

{% extends "layout.njk" %}

{% block beforeContent %}
  {{ govukBackLink({
    text: "Back",
    href: backPath()
  }) }}
{% endblock %}

{% block content %}
  {% if errors["initial-leave-eligible"] or errors["initial-pay-eligible"] %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [
        errors["initial-leave-eligible"],
        errors["initial-pay-eligible"]
      ]
    }) }}
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <h1 class="govuk-heading-xl">
        {{ data | primaryName | capitalize }}’s leave and pay entitlements
      </h1>
      <form method="POST">
        {% call appendHiddenFields(data) %}
          {% if data["primary"]["spl-eligible"] === "no" %}
            {{ govukRadios({
              classes: "govuk-radios--inline",
              idPrefix: "primary-initial-leave-eligible",
              name: "primary[initial-leave-eligible]",
              fieldset: {
                legend: {
                  text: "Is the " + data | primaryName + " eligible for " + data | primaryLeaveType + " leave?",
                  classes: "govuk-fieldset__legend--m"
                }
              },
              errorMessage: {
                text: errors["initial-leave-eligible"].text
              } if errors["initial-leave-eligible"],
              items: [
                {
                  value: "yes",
                  text: "Yes",
                  checked: data["primary"]["initial-leave-eligible"] === "yes"
                },
                {
                  value: "no",
                  text: "No",
                  checked: data["primary"]["initial-leave-eligible"] === "no"
                }
              ]
            }) }}
          {% endif %}

          {% if data["primary"]["shpp-eligible"] === "no" %}
            {{ govukRadios({
              classes: "govuk-radios--inline",
              idPrefix: "primary-initial-pay-eligible",
              name: "primary[initial-pay-eligible]",
              fieldset: {
                legend: {
                  text: "Is the " + data | primaryName + " eligible for statutory " + data | primaryLeaveType + "  pay?",
                  classes: "govuk-fieldset__legend--m"
                }
              },
              errorMessage: {
                text: errors["initial-pay-eligible"].text
              } if errors["initial-pay-eligible"].text,
              items: [
                {
                  value: "yes",
                  text: "Yes",
                  checked: data["primary"]["initial-pay-eligible"] === "yes"
                },
                {
                  value: "no",
                  text: "No",
                  checked: data["primary"]["initial-pay-eligible"] === "no"
                }
              ]
            }) }}
          {% endif %}
        {% endcall %}

        <p class="govuk-hint">
          If you’re not sure, <a href="https://www.gov.uk/pay-leave-for-parents">check if you can get leave and pay when you have a child</a>
        </p>

        <button type="submit" class="govuk-button">
          Continue
        </button>
      </form>
    </div>
  </div>
{% endblock %}
