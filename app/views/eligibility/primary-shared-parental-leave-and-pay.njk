{% from "back-link/macro.njk" import govukBackLink %}
{% from "radios/macro.njk" import govukRadios %}
{% from "error-summary/macro.njk" import govukErrorSummary %}
{% from "hidden-fields/macro.njk" import appendHiddenFields %}
{% from "button/macro.njk" import govukButton %}
{% from "macro.njk" import pushToGoogleAnalyticsDataLayer %}

{% extends "layout.njk" %}

{% block pageTitle -%}
  {{ "Is the " + (data | primaryName) + " eligible for shared parental leave and pay?" | pageTitle }}
{%- endblock %}

{% block beforeContent %}
  {{ super() }}

  {{ govukBackLink({
    text: "Back",
    href: backPath()
  }) }}
{% endblock %}

{% block content %}
  {% if errors["spl-eligible"] or errors["shpp-eligible"] %}
    {{ govukErrorSummary({
      titleText: "There is a problem",
      errorList: [
        errors["spl-eligible"],
        errors["shpp-eligible"]
      ]
    }) }}
    {% if errors["spl-eligible"] %}
      {{ pushToGoogleAnalyticsDataLayer("error_msg", errors["spl-eligible"].text, "Errorshown") }}
    {% endif %}
    {% if errors["shpp-eligible"] %}
      {{ pushToGoogleAnalyticsDataLayer("error_msg", errors["shpp-eligible"].text, "Errorshown") }}
    {% endif %}
  {% endif %}

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds-from-desktop">
      <h1 class="govuk-heading-l">
        {{ data | primaryName | capitalize }}’s leave and pay
      </h1>
      <form method="POST">
        {% call appendHiddenFields(data) %}
          {% set hint %}
             <p class="govuk-hint">
               If you’re not sure, <a href="{{ eligibility_tool_root_path }}">check if you can get Shared Parental Leave or Pay</a>.
             </p>
          {% endset %}

          {{ govukRadios({
            classes: "govuk-radios--inline",
            idPrefix: "primary-spl-eligible",
            name: "primary[spl-eligible]",
            fieldset: {
              legend: {
                text: "Is the " + data | primaryName + " eligible for Shared Parental Leave?",
                classes: "govuk-fieldset__legend--m"
              }
            },
            errorMessage: {
              text: errors["spl-eligible"].text
            } if errors["spl-eligible"],
            items: [
              {
                value: "yes",
                text: "Yes",
                checked: data["primary"]["spl-eligible"] | isYes
              },
              {
                value: "no",
                text: "No",
                checked: data["primary"]["spl-eligible"] | isNo
              }
            ]
          }) }}

          {{ govukRadios({
            classes: "govuk-radios--inline",
            idPrefix: "primary-shpp-eligible",
            name: "primary[shpp-eligible]",
            fieldset: {
              legend: {
                text: "Is the " + data | primaryName + " eligible for Statutory Shared Parental Pay?",
                classes: "govuk-fieldset__legend--m"
              }
            },
            errorMessage: {
              text: errors["shpp-eligible"].text
            } if errors["shpp-eligible"],
            hint: {
              html: hint
            },
            items: [
              {
                value: "yes",
                text: "Yes",
                checked: data["primary"]["shpp-eligible"] | isYes
              },
              {
                value: "no",
                text: "No",
                checked: data["primary"]["shpp-eligible"] | isNo
              }
            ]
          }) }}
        {% endcall %}

        {{ govukButton({
          text: "Continue"
        }) }}
      </form>
    </div>
  </div>
{% endblock %}
